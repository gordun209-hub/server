{
  "compilerOptions": {
    "target": "es2016",
    "strict": true,
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
